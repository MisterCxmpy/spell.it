{
  "name": "spell.it",
  "version": "1.0.0",
  "description": "spell.it is a powerful and intuitive application that helps you grammatically correct your sentences.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder"
  },

  "build": {
    "extraResources": "python_scripts",
    "appId": "spell.it",
    "asar": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "book.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "book.ico",
      "uninstallerIcon": "book.ico",
      "uninstallDisplayName": "spell.it",
      "license": "license.md",
      "allowToChangeInstallationDirectory": false
    }
  },

  "repository": "https://github.com/MisterCxmpy/spell.it",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "autosize": "^5.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "python-shell": "^1.0.8"
  }
}
